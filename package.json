{
  "name": "graphql-service-template",
  "version": "0.0.1",
  "private": true,
  "eslintConfig": {
    "parser": "typescript-eslint-parser",
    "extends": "standard",
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/graphql": "^0.9.1",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/knex": "^0.0.53",
    "@types/lodash": "^4.14.65",
    "@types/micro": "^7.3.0",
    "@types/node": "^7.0.27",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "nodemon": "^1.11.0",
    "prettier-eslint-cli": "^4.0.2",
    "typescript": "^2.3.4",
    "typescript-eslint-parser": "^3.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql": "^0.10.1",
    "graphql-server-micro": "^0.8.0",
    "graphql-tools": "^1.0.0",
    "jsonwebtoken": "^7.4.1",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "micro": "^7.3.3",
    "sqlite3": "^3.1.8"
  },
  "scripts": {
    "start": "nodemon --ext ts --watch src/ --exec 'tsc && micro dist/'",
    "precommit": "lint-staged"
  }
}
